<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Schedule" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/purple_500</item>-->
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorPrimary">@color/trademarkFont</item>
        <item name="colorPrimaryVariant">@color/trademarkFontVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
        <item name="colorSecondary">@color/colorControlSwitch</item>
        <item name="colorSecondaryVariant">@color/colorControlSwitchVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorControlActivated">@color/colorControlSwitch</item>
        <item name="thumbColor">@color/gray</item>

<!--        <item name="colorAccent">@color/colorControlSwitch</item>-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
    </style>
    <style name="Theme.Schedule.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Schedule.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Schedule.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NumberPickerText" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">48sp</item>
    </style>


    <style name="Theme.Schedule.Switch" parent="Theme.Schedule">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@color/colorControlSwitch</item>
